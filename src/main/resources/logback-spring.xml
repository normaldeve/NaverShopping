<configuration>

    <!-- 콘솔 출력 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- MemoryMonitor 전용 로그 파일 -->
    <appender name="MEMORY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/memory-monitor.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/memory-monitor-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- MemoryMonitor 클래스 전용 logger -->
    <logger name="com.navershop.navershop.config.MemoryMonitor"
            level="INFO"
            additivity="true">
        <!-- MemoryMonitor 로그는 파일에도 따로 저장 -->
        <appender-ref ref="MEMORY_FILE" />
    </logger>

    <!-- 루트 로거: 전체 로그를 콘솔과 app.log에 출력 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>